.loading {
  position: fixed;
  z-index: 999;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: transparent;
  display: flex;
  justify-content: center;
  padding-top: 30vh;
}
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  width: 280rpx;
  height: 140rpx;
  border-radius: 20rpx;
  flex-grow: 0;
}
.circle {
  border: 4rpx solid #fff;
  border-top-color: transparent;
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  animation: spin 1s linear infinite;
}
.logo {
  width: 80rpx;
  height: auto;
}
.text {
  color: #fff;
  font-size: 30rpx;
  line-height: 1;
  margin-left: 20rpx;
}
@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}